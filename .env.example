# Home Budget App - Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://budgetapp:your_secure_password@localhost:5432/budget_app
DB_HOST=localhost
DB_PORT=5432
DB_NAME=budget_app
DB_USER=budgetapp
DB_PASSWORD=your_secure_password

# Application Settings
APP_NAME=Home Budget App
APP_VERSION=1.0.0
DEBUG=true
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-too
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Server Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
FRONTEND_HOST=0.0.0.0
FRONTEND_PORT=3000

# SimpleFIN Configuration
SIMPLEFIN_BASE_URL=https://bridge.simplefin.org
SIMPLEFIN_TOKEN=your-simplefin-token
SIMPLEFIN_SETUP_TOKEN=your-simplefin-setup-token

# Google AI Configuration (for receipt processing)
GOOGLE_AI_API_KEY=your-google-ai-api-key
GOOGLE_AI_PROJECT_ID=your-google-project-id

# QuickBooks Integration
QUICKBOOKS_CLIENT_ID=your-quickbooks-client-id
QUICKBOOKS_CLIENT_SECRET=your-quickbooks-client-secret
QUICKBOOKS_REDIRECT_URI=http://localhost:8000/auth/quickbooks/callback
QUICKBOOKS_SANDBOX=true

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# File Storage Configuration
UPLOAD_DIR=/opt/budget-app/uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=pdf,jpg,jpeg,png,gif,doc,docx,xls,xlsx

# Encryption Configuration
ENCRYPTION_KEY=your-32-byte-encryption-key-change-this
DOCUMENT_ENCRYPTION_ENABLED=true

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# Security Settings
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CSRF_PROTECTION=true
RATE_LIMIT_ENABLED=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/budget-app/app.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/opt/budget-app/backups
